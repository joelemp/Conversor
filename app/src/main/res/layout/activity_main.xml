<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:srcCompat="@mipmap/ic_launcher_foreground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TEMPERATURA" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="#A1A1A5"
                android:onClick="temp"
                android:text="CELSIUS-FAHRENHEIT\nFAHRENHEIT-CELSIUS"
                android:textColor="#0700CE" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AREA" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="#A1A1A5"
                android:onClick="area"
                android:text="HECTAREA-METRO2\nMETRO2-HECTAREA"
                android:textColor="#0700CE" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DISTANCIA" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="#A1A1A5"
                android:onClick="dist"
                android:text="METRO-CENTIMETRO\nCENTIMETRO-METRO"
                android:textColor="#0700CE" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>